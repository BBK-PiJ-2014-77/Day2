//ask for n
//calculate double
int i = 0;
println ("How many iterations?");
String number = System.console().readLine();
int n = Integer.parseInt(number);
double pie = 0.0;
boolean flip = false;
while (i < n ) {
	if (flip == false) { 
	pie = pie + ( 4.0 / ((2 * i) + 1));
	i++;
	flip = true;
	}
	else if (flip == true) {
	pie = pie - ( 4.0 / ((2 * i) + 1));
	i++;
	flip = false;
	}
println (pie);	
}
println (pie);


